#include <stdio.h>
#ifndef INPUT_H_
#define INPUT_H_

/** \brief Pide el ingreso de dos numeros y los suma
 * \param float primer numero
 * \param char[] primer numero
 * \return int Un numero entero validado
 */
//Prototipos
float calcularSuma(float,float);
/** \brief Pide el ingreso de un numero entero y lo valida
 *
 * \param char[] Texto para pedir el dato
 * \param char[] Texto en caso de error
 * \param int minimo dentro del rango a validar
 * \param int maximo dentro del rango a validar
 * \return int Un numero entero validado
 *
 */
float calcularResta(float,float);
float calcularMultiplicacion(float,float);
float calcularDivision(float,float);
int calcularFactorial(int);



#endif /* INPUT_H_ */
